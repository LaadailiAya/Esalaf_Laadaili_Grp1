<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.esalaf.AdminController" style="-fx-background-color: #f7f7f7; -fx-font-family: Arial, sans-serif; " >

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-border-color: #cccccc; -fx-border-width: 2px; -fx-border-radius: 10px;">
        <Label text="Identifiant:" style="-fx-font-size: 14px;" />
        <TextField fx:id="id" style="-fx-font-size: 14px; -fx-background-color: #f2f2f2; -fx-border-radius: 5px; -fx-padding: 5px;" />

        <Label text="User Name:" style="-fx-font-size: 14px;" />
        <TextField fx:id="user" style="-fx-font-size: 14px; -fx-background-color: #f2f2f2; -fx-border-radius: 5px; -fx-padding: 5px;" />

        <Label text="Pass Word:" style="-fx-font-size: 14px;" />
        <TextField fx:id="pwd" style="-fx-font-size: 14px; -fx-background-color: #f2f2f2; -fx-border-radius: 5px; -fx-padding: 5px;" />
    </VBox>


        <Button fx:id="ConnectBtn"
                text="Connexion"
                onAction="#onConnectButtonClick"
                style="-fx-background-color: #c8d2ff;
               -fx-text-fill: #000000;
               -fx-font-size: 16px;
               -fx-font-weight: bold;
               -fx-padding: 10px 20px;" />

</VBox>
